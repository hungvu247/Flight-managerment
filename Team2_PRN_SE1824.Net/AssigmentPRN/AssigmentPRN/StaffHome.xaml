                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2ecc71"/>
                                <!-- Set button background color to #2ecc71 on mouse over -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button DockPanel.Dock="Top" Content="Manage booking"  Margin="5" Width="150" Height="40" Click="Button_Click_5" >
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#3498db"/>
                        <!-- Set button background color to #3498db -->
                        <Setter Property="Foreground" Value="White"/>
