<Window x:Class="AssigmentPRN.StaffHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssigmentPRN"
        mc:Ignorable="d"
        Title="StaffHome" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="D:\Summer24\PRN_Code_V2\AssigmentPRN/maybay2.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <!-- Increased taskbar width to 100 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Taskbar -->
        <DockPanel Grid.Column="0" Background="#3498db" Grid.ColumnSpan="2" Margin="0,0,636,0" >
            <!-- Set taskbar background color to #3498db -->
            <Button DockPanel.Dock="Top" Content="Passenger manager"  Margin="5" Width="150" Height="40" Click="Button_Click_2">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#3498db"/>
                        <!-- Set button background color to #3498db -->
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2ecc71"/>
                                <!-- Set button background color to #2ecc71 on mouse over -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>


            <Button DockPanel.Dock="Top" Content="Baggage Manager"  Margin="5" Width="150" Height="40" Click="Button_Click_4">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
